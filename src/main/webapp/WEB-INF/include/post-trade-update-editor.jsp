  // ‚úÖ ÏàòÏ†ï Î™®ÎìúÏùº Îïå Í∏∞Ï°¥ content ÌååÏã±
  let existingContent = null;
  <c:if test="${not empty post.content}">
  try {
    const jsonData = `${post.content}`;
    existingContent = JSON.parse(jsonData);
    console.log('Í∏∞Ï°¥ content Î°úÎìú ÏÑ±Í≥µ');
  } catch (err) {
    console.error('Í∏∞Ï°¥ content JSON ÌååÏã± Ïò§Î•ò:', err);
    existingContent = null;
  }
  </c:if>

  // ========================================
  // ÏóêÎîîÌÑ∞ Ï¥àÍ∏∞Ìôî
  // ========================================
  function initializeEditor() {
    editor = initEditor(
      document.getElementById("board"),
      document.getElementById("toolbar")
    );

    // ‚úÖ ÏàòÏ†ï Î™®ÎìúÏùº Îïå Í∏∞Ï°¥ content Î°úÎìú
    if (isEditMode && existingContent) {
      editor.commands.setContent(existingContent);
      console.log('ÏóêÎîîÌÑ∞Ïóê Í∏∞Ï°¥ content ÏÑ§Ï†ï ÏôÑÎ£å');
    }

    // ÎÇ¥Ïö© Î≥ÄÍ≤Ω Í∞êÏßÄ
    editor.on('update', () => { hasContentChanged = true; });
    return editor;
  }
  editor = initializeEditor();
  
  // ‚úÖ Ï†ÑÏó≠ Î≥ÄÏàòÎ°ú ÏóêÎîîÌÑ∞ Îì±Î°ù (Ïù¥ÎØ∏ÏßÄ Î™®Îã¨ Îì±ÏóêÏÑú ÏÇ¨Ïö©)
  window.currentEditor = editor;

  // ========================================
  // Ïù¥Î™®ÏßÄ Í∏∞Îä•
  // ========================================
  window.openEmojiPicker = EmojiModule.openPicker;
  EmojiModule.setupEmojiSuggestion(editor);

  // ========================================
  // Ïπ¥Ïπ¥Ïò§Îßµ Î≤ÑÌäº Ïó∞Í≤∞(Ï°¥Ïû¨ Ïãú)
  // ========================================
  function setupMapButtons() {
    const mapModalButton = document.querySelector('.toolbar-feature[data-feature="map-modal"] button[data-cmd="Map"]');
    if (mapModalButton && window.openKakaoMapModal) {
      mapModalButton.onclick = () => window.openKakaoMapModal(editor);
    }
    const mapButton = document.querySelector('.toolbar-feature[data-feature="map"] button[data-cmd="Map"]');
    if (mapButton && window.openKakaoMapModalEnhanced) {
      mapButton.onclick = () => window.openKakaoMapModalEnhanced(editor);
    }
  }
  setupMapButtons();

  // ========================================
  // Ìà¥Î∞î Í∏∞Îä• ÌëúÏãú/Ïà®ÍπÄ
  // ========================================
  function updateToolbarFeatures(category) {
    const features = CATEGORY_FEATURES[category] || [];
    const all = document.querySelectorAll('.toolbar-feature');

    all.forEach(feature => {
      const featureName = feature.getAttribute('data-feature');
      // emoji/linkÎäî Ìï≠ÏÉÅ
      if (featureName === 'emoji' || featureName === 'link') {
        feature.style.display = 'inline-block';
        return;
      }
      if (features.includes(featureName)) {
        feature.style.display = 'inline-block';
        feature.classList.add('active');
      } else {
        feature.style.display = 'none';
        feature.classList.remove('active');
      }
    });
  }

  // ‚úÖ Ï¥àÍ∏∞ Ïπ¥ÌÖåÍ≥†Î¶¨Í∞Ä ÏûàÏúºÎ©¥ Ìà¥Î∞î Í∏∞Îä• ÌôúÏÑ±Ìôî
  if (initialListId) {
    currentCategory = initialListId;
    updateToolbarFeatures(initialListId);
    console.log('Ï¥àÍ∏∞ Ìà¥Î∞î Í∏∞Îä• ÌôúÏÑ±Ìôî:', initialListId);
  } else {
    // Ï¥àÍ∏∞Ïóî emoji/linkÎßå
    updateToolbarFeatures('');
  }

  // ========================================
  // ÏóêÎîîÌÑ∞ Î¶¨ÏÖã
  // ========================================
  function resetEditor() {
    if (editor) {
      editor.commands.setContent('');
      document.getElementById('title').value = '';
      hasContentChanged = false;
    }
  }

  // ========================================
  // Ïπ¥ÌÖåÍ≥†Î¶¨ Î≥ÄÍ≤Ω Ïù¥Î≤§Ìä∏
  // ========================================
  document.getElementById('listId').addEventListener('change', (e) => {
    const newCategory = e.target.value;
    if (!newCategory) { 
      currentCategory = '';
      updateToolbarFeatures(''); 
      return; 
    }

    const titleValue = document.getElementById('title').value.trim();
    const hasContent = hasContentChanged || !!titleValue;

    // ‚úÖ ÏàòÏ†ï Î™®ÎìúÏóêÏÑúÎäî Ïπ¥ÌÖåÍ≥†Î¶¨ Î≥ÄÍ≤Ω Ïãú Ìï≠ÏÉÅ ÌôïÏù∏
    // ‚úÖ ÏûëÏÑ± Î™®ÎìúÏóêÏÑúÎäî Ï¥àÍ∏∞ Î°úÎìú ÏãúÏóêÎäî ÌôïÏù∏ Ïïà Ìï®
    const shouldConfirm = isEditMode 
      ? (currentCategory && currentCategory !== newCategory)
      : (currentCategory && currentCategory !== newCategory && hasContent);

    if (shouldConfirm) {
      if (!confirm('Ïπ¥ÌÖåÍ≥†Î¶¨Î•º Î≥ÄÍ≤ΩÌïòÎ©¥ ÌòÑÏû¨ÍπåÏßÄÏùò ÏûëÏÑ± ÎÇ¥Ïö©Ïù¥ Î™®Îëê ÏÇ≠Ï†úÎê©ÎãàÎã§. Í∑∏ÎûòÎèÑ ÏßÑÌñâÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
        e.target.value = currentCategory; // ÎêòÎèåÎ¶¨Í∏∞
        return;
      }
      resetEditor();
    }
    
    currentCategory = newCategory;
    updateToolbarFeatures(newCategory);
  });

  // Ï†úÎ™© ÏûÖÎ†• Ïãú Î≥ÄÍ≤Ω ÌîåÎûòÍ∑∏
  document.getElementById('title').addEventListener('input', function () {
    if (this.value.trim()) hasContentChanged = true;
  });

  // ========================================
  // Ìèº Ï†úÏ∂ú Ï†ÑÏóê TipTap JSON Ï£ºÏûÖ + Ïú†Ìö®ÏÑ± Í≤ÄÏÇ¨
  // ========================================
  window.prepareAndSubmit = function () {
    if (!editor) { alert("ÏóêÎîîÌÑ∞Í∞Ä Ï¥àÍ∏∞ÌôîÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§."); return false; }

    const title  = document.getElementById('title').value.trim();
    const listId = document.getElementById('listId').value;

    if (!listId) { alert("Ïπ¥ÌÖåÍ≥†Î¶¨Î•º ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî."); return false; }
    if (!title)  { alert("Ï†úÎ™©ÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî."); return false; }

    const contentData = editor.getJSON();
    if (!contentData || !contentData.content || contentData.content.length === 0) {
      if (!confirm("Î≥∏Î¨∏ ÎÇ¥Ïö©Ïù¥ ÎπÑÏñ¥ÏûàÏäµÎãàÎã§. Í≥ÑÏÜç ÏßÑÌñâÌïòÏãúÍ≤†ÏäµÎãàÍπå?")) return false;
    }

    // ‚òÖ ÏÑúÎ≤ÑÎäî Î¨∏ÏûêÏó¥ JSONÏùÑ Í∏∞ÎåÄ
    document.getElementById('content').value = JSON.stringify(contentData);
    return true; // Ï†úÏ∂ú ÏßÑÌñâ
  };

  // ========================================
  // Ï∑®ÏÜå
  // ========================================
  window.cancelPost = function () {
    const message = isEditMode 
      ? "ÏàòÏ†ïÏùÑ Ï∑®ÏÜåÌïòÏãúÍ≤†ÏäµÎãàÍπå? Î≥ÄÍ≤Ω ÏÇ¨Ìï≠ÏùÄ Ï†ÄÏû•ÎêòÏßÄ ÏïäÏäµÎãàÎã§."
      : "ÏûëÏÑ±ÏùÑ Ï∑®ÏÜåÌïòÏãúÍ≤†ÏäµÎãàÍπå? ÏûëÏÑ± Ï§ëÏù∏ ÎÇ¥Ïö©ÏùÄ Ï†ÄÏû•ÎêòÏßÄ ÏïäÏäµÎãàÎã§.";
    
    if (confirm(message)) {
      hasContentChanged = false;
      
      // ‚úÖ ÏàòÏ†ï Î™®ÎìúÏùº ÎïåÎäî Í≤åÏãúÍ∏Ä ÏÉÅÏÑ∏ ÌéòÏù¥ÏßÄÎ°ú
      <c:if test="${not empty post.postId}">
      window.location.href = "<c:url value='/post-detail.post'/>?postId=${post.postId}";
      return;
      </c:if>
      
      // ‚úÖ ÏûëÏÑ± Î™®ÎìúÏùº ÎïåÎäî listIdÍ∞Ä ÏûàÏúºÎ©¥ Ìï¥Îãπ Î¶¨Ïä§Ìä∏Î°ú ÎèåÏïÑÍ∞ÄÍ∏∞
      if (initialListId) {
        window.location.href = "<c:url value='/post-list'/>?listId=" + initialListId;
      } else {
        window.location.href = "<c:url value='/meeting-gather.jsp'/>";
      }
    }
  };

  // ========================================
  // ÌéòÏù¥ÏßÄ Ïù¥ÌÉà Í≤ΩÍ≥†
  // ========================================
  window.addEventListener('beforeunload', function (e) {
    if (hasContentChanged) { e.preventDefault(); e.returnValue = ''; return ''; }
  });

  // ========================================
  // ÏóêÎîîÌÑ∞ ÌÅ¥Î¶≠ Ïãú Ìè¨Ïª§Ïä§
  // ========================================
  document.getElementById('board').addEventListener('click', function () {
    if (editor) editor.commands.focus();
  });
</script>

